{
  "name": "ds",
  "version": "1.0.0",
  "description": "Design System monorepo with automated CI/CD",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "cd packages/utopia && npm run dev",
    "build": "cd packages/utopia && npm run build",
    "build:tokens": "cd packages/utopia && npm run build:tokens",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "cd packages/utopia && npm run lint",
    "type-check": "cd packages/utopia && npm run type-check",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "cd packages/utopia && npm run build && cd ../.. && NPM_CONFIG_YES=true changeset publish",
    "ci:build": "npm run build:tokens && npm run build",
    "ci:test": "npm run lint && npm run type-check",
    "pre-commit:install": "pre-commit install",
    "pre-commit:validate-design-system": "cd packages/utopia && npm run pre-commit:validate",
    "pre-commit:validate-website": "cd apps/utopia-website && npm run pre-commit:validate",
    "pre-commit:changeset-check": "node scripts/check-changeset.cjs"
  },
  "keywords": [
    "design-system",
    "vue",
    "tokens",
    "components"
  ],
  "author": "Club Employes",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.11",
    "@types/json-schema": "^7.0.15"
  },
  "preInstall": "echo '⚙️  Pour activer les hooks pre-commit, exécutez: npm run pre-commit:install'",
  "engines": {
    "node": ">=18.0.0"
  }
}
